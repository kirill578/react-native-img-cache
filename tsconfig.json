{
    "compilerOptions": {
	"module": "commonjs",
    	"strict": true,
    	"emitDecoratorMetadata": true,
"allowSyntheticDefaultImports": true,
    	"experimentalDecorators": true,
    	"jsx": "react-native",
    	"lib": [
    	  "dom",
    	  "es5",
    	  "es6",
    	  "scripthost"
   	 ],
    	"target": "es5",
    	"outDir": "build",
        "rootDir": "src",
    	"sourceMap": true
    },
    "exclude": [
        "build",
        "node_modules"
    ],
    "filesGlob": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ]
}